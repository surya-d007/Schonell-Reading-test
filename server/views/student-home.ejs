<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    
    <style>
        /* Global Styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        /* Dashboard Container */
        .dashboard-container {
            max-width: 800px;
            margin: 30px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Title Styles */
        .title {
            font-size: 30px;
            margin-bottom: 20px;
            padding-left: 20px;
        }

        /* Navigation Link Styles */
        .nav-link {
            display: inline-block;
            margin-right: 20px;
            font-size: 18px;
            text-decoration: none;
            color: #333;
        }

        /* List Styles */
        .test-list {
            list-style-type: none;
            padding: 0;
        }

        /* ListItem Styles */
        .test-item {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        /* Button Styles */
        .take-test-btn {
            background-color: #c45ade;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <!-- Dashboard Container -->
    <div class="dashboard-container">
        <!-- Title -->
        <h3 class="title">User Dashboard</h3>

        <!-- Navigation Links -->
        <a href="/user/dashboard" class="nav-link">Dashboard</a>
        <a href="/user/profile" class="nav-link">Profile</a>
        <a href="/user/settings" class="nav-link">Settings</a>

        <!-- List of Tests -->
        <ul class="test-list">
            <h3 class="title">Schonell Reading Test</h3>
            <% AllTests.sort((a, b) => a.testno - b.testno).forEach(test => { %>
                <!-- Individual Test Item -->
                <li class="test-item">
                    <!-- Test Number and Words on the left -->
                    <div>
                        <strong>Test Number:</strong> <%= test.testno %>
                    </div>
                    <!-- Take Test Button on the right -->
                    <button class="take-test-btn" onclick="takeTest('<%= test.testno %>')">Take Test</button>
                </li>
            <% }); %>
        </ul>
    </div>

    <!-- JavaScript Function to Redirect to Test Page -->
    <script>
        function takeTest(testno) {
            // Redirect to the test page with the specific test number
            window.location.href = "/test/" + testno + "/0";
        }
    </script>
</body>
</html>
